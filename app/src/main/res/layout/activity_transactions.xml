<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.savvasdalkitsis.mondo.android.widget.MondoToolbar
        style="@style/Mondo.Toolbar"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            layout="@layout/view_mondo_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_extended_height"
            android:layout_margin="16dp"
            android:minHeight="@dimen/toolbar_extended_height"/>
    </com.savvasdalkitsis.mondo.android.widget.MondoToolbar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/view_transactions"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>